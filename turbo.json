{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["generate-types", "^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "NODE_ENV",
        "API_URL",
        "PAYLOAD_SECRET",
        "DATABASE_URL",
        "RESEND_API_KEY",
        "PUBLIC_PAYLOAD_API_URL",
        "BETTER_AUTH_SECRET",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    },
    "dev": {
      "dependsOn": ["generate-types"],
      "persistent": true,
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "generate-types": {
      "outputs": ["src/generated/payload-types.ts"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "PAYLOAD_SECRET",
        "BETTER_AUTH_SECRET",
        "GITHUB_CLIENT_ID",
        "GITHUB_CLIENT_SECRET",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env"]
    }
  }
}
