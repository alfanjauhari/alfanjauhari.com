{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["generate-types", "^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "PAYLOAD_SECRET",
        "PUBLIC_PAYLOAD_API_URL"
      ]
    },
    "dev": {
      "dependsOn": ["generate-types"],
      "persistent": true,
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "generate-types": {
      "outputs": ["payload-types.ts"],
      "env": ["NODE_ENV", "DATABASE_URL", "PAYLOAD_SECRET"]
    }
  }
}
