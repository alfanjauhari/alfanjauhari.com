---
import { Tagline } from "@/components/pages/home/Tagline";
import { SelectedWorksHeading } from "@/components/pages/home/SelectedWorksHeading";
import SiteLayout from "@/layouts/SiteLayout.astro";
import { Image } from "astro:assets";
---

<SiteLayout title="Home">
  <section id="hero" class="flex flex-col h-[calc(100vh-5rem)] sticky top-20">
    <div class="flex flex-col h-full">
      <Tagline client:load />
    </div>
  </section>
  <section
    id="works"
    class="h-screen bg-stone-300 -mx-6 sticky top-0 px-6 pt-20"
  >
    <div class="space-y-12">
      <SelectedWorksHeading client:visible />
      <div>
        <div
          class="grid grid-cols-4 items-center gap-12 border-t border-b border-gray-900 h-32 group relative"
        >
          <h1 class="text-3xl">Michelle Oh Website</h1>
          <p class="text-2xl italic">2023</p>
          <p class="text-2xl">Product Engineer</p>
          <p class="text-2xl">Shopify</p>
          <Image
            src="https://res.cloudinary.com/db8cfpaih/image/upload/f_avif,q_50,w_240,h_180/images/projects/Michelle-Oh.png"
            alt="Michelle Oh Website Screenshot"
            width={240}
            height={180}
            class="absolute right-0 rounded-lg opacity-0 invisible group-hover:opacity-100 duration-300 group-hover:visible translate-y-10 group-hover:translate-y-0"
          />
        </div>
        <div
          class="grid grid-cols-4 items-center gap-12 border-b border-gray-900 h-32 relative group"
        >
          <h1 class="text-3xl">BAKTI DNA</h1>
          <p class="text-2xl italic">2022</p>
          <p class="text-2xl">Product Engineer</p>
          <p class="text-2xl">Nx, NextJS, Chakra UI</p>
          <Image
            src="https://res.cloudinary.com/db8cfpaih/image/upload/f_avif,q_50,w_240,h_180/images/projects/BAKTI-DNA.png"
            alt="BAKTI DNA Website Screenshot"
            width={240}
            height={180}
            class="absolute right-0 rounded-lg opacity-0 invisible group-hover:opacity-100 duration-300 group-hover:visible translate-y-10 group-hover:translate-y-0"
          />
        </div>
      </div>
    </div>
  </section>
</SiteLayout>
